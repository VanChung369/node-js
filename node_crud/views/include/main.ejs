<main id="main">
    <div class="container">
      <div class="box">
        <h4 class="display-4 text-center">Read</h4>
        <br />
        <!-- <div class="alert alert-success" role="alert">
              </div> -->
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Email</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody>
            <% for(var i = 0; i < users.length; i++) { %>
            <tr>
              <th scope="row"><%= i + 1 %></th>
              <td><%= users[i].name %></td>
              <td><%= users[i].email %></td>
              <td>
                <a href="/update?id=<%= users[i]._id%>" class="btn btn-success">Update</a>
                <a href="delete" data-id=<%= users[i]._id%> class="btn btn-danger">Delete</a>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <div class="link-right">
          <a href="/add" class="link-primary">Create</a>
        </div>
      </div>
    </div>
  </main>